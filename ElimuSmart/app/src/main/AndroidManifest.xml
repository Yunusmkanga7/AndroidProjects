<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.elimusmart">

    <!-- Ruhusa ya kutumia intaneti -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ElimuSmart"
        tools:targetApi="31"
        android:networkSecurityConfig="@xml/network_security_config"> <!-- Hii ndiyo muhimu -->

        <!-- Activity ya Mwanzo (Launcher) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ElimuSmart">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Dashboard ya Mwalimu -->
        <activity
            android:name=".TeacherDashboardActivity"
            android:exported="true"
            android:label="Teacher Dashboard"
            android:theme="@style/Theme.ElimuSmart" />

        <!-- Dashboard ya Mwanafunzi -->
        <activity
            android:name=".StudentDashboardActivity"
            android:exported="true"
            android:label="Student Dashboard"
            android:theme="@style/Theme.ElimuSmart" />

    </application>
</manifest>
